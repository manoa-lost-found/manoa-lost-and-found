// prisma/schema.prisma
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // For local development:
  // url      = env("DATABASE_URL")
  // For Vercel (Neon / Vercel Postgres):
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Role {
  USER
  ADMIN
  DISABLED
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)

  // null = not verified yet, non-null = verified at this time
  emailVerified DateTime?

  // Relation to email verification tokens
  verificationTokens EmailVerificationToken[]

  // Relation to lost/found items
  lostFoundItems LostFoundItem[]

  // ids of LostFoundItem that user has already seen as "ready for pickup"
  seenPickupItemIds Int[] @default([])
}

enum Condition {
  excellent
  good
  fair
  poor
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model EmailVerificationToken {
  id    Int    @id @default(autoincrement())
  token String @unique

  // Which user this token belongs to
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // When this token expires (after this time it is invalid)
  expiresAt DateTime
}

enum LostFoundType {
  LOST
  FOUND
}

enum LostFoundStatus {
  OPEN
  TURNED_IN
  WAITING_FOR_PICKUP
  RECOVERED
}

model LostFoundItem {
  id           Int             @id @default(autoincrement())
  title        String
  description  String
  type         LostFoundType
  status       LostFoundStatus @default(OPEN)
  imageUrl     String?
  category     String
  building     String
  term         String
  date         DateTime
  locationName String?

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
